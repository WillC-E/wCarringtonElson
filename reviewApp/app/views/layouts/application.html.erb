<!DOCTYPE html>
<html>
  <head>
    <title>ReviewApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>



    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">

   <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">

      <h5 class="my-0 mr-md-auto font-weight-normal"> Electronic Reviews </h5>

      <nav class="my-2 my-md-0 mr-md-3">


        <a class="p-2 text-dark" href="#"> <%= link_to "Home", '#' %> </a>
        <a class="p-2 text-dark" href="#"> <%= link_to "About", '#' %> </a>
        <a class="p-2 text-dark" href="#"> <%= link_to "Contact", '#' %> </a>
        <a class="p-2 text-dark" href="#"> <%=link_to 'Products', products_path %> </a>



       
      </nav>
    </div>

    <% if current_user %>
      <a class="p-2 text-dark" href="#">
        <%= link_to 'log out', session_path('active'), method: :delete %>

        <%if checkProfile %>
          <%=link_to ' | View Profile', profile_path(checkProfile) %>
            
        <% else %>
          <%=link_to ' | Create Profile', new_profile_path %>

        </a>
        <% end %>

      </a>
      <% else %>
      <a class="p-2 text-dark" href="#">
        <%= link_to 'Log in', new_session_path, class: "active_nav_link" %>
        <%= link_to " | Create Account", new_user_path  %> 
      </a>

      <% end %>



</div>


    <%= yield %>
  </body>
</html>
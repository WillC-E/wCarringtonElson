<div class ="container">
<h3>Product Details</h3>

<p>Product Name: <%= @product.productName %>  </p>
<p>Brand: <%= @product.brand %>  </p>
<p>Average Cost:<%= @product.avgCost %>  </p>

<p>category:<%= @product.category %>  </p>
<p>releaseDate: <%= @product.releaseDate  %>   </p>
<p>description: <%= @product.description  %>   </p>

<p>Product Photo: <%= image_tag(@product.prodPhoto.url, size: "150x150") if @product.prodPhoto.exists? %> </p>
<% if current_user %>
 <a class="p-2 text-dark" href="#"> <%=link_to 'Write a review', new_review_path({name: @product.productName, id: @product.id}) %> </a>
      </a>
      
      <% end %>

</div>


<div class ="container">
    <h2> Reviews </h2>



    <table border="1" class = "table">
        <tr>
        	<th> Avatar </th>
            <th> Author </th>
            <th> Rating </th>
            <th> Review Text </th>
            <th> Review Date</th>


        </tr>

        <% @review.each do |review|%>
        <tr>

        	<td> <%= image_tag(review.profile.photo.url, size:"150x150") %> </td>
            <td> <%= review.author %> </td>
            <td> <%= review.prodRating %> </td>
            <td> <%= review.reviewText %> </td>
            <td> <%= review.reviewDate %> </td>
            <% if current_user && (checkProfile.id == review.profile_id) %>
            <td> <%=link_to 'Edit', edit_review_path(review.id) %> 
                <br>
                <%= link_to 'Delete', review_path(review.id), method: :Delete, data:{confirm: "Are you sure you want to delete this review?"} %>
            </td>
            <% end %>
                </td>

</td> 
        </tr>
<% end %>

</table>
</div>

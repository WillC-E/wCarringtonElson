
<div class="container">
    <h2> Create a Review </h2>

<%= form_for :review, url: reviews_path do |f| %>

<div class="form-group">
    <%= f.label :User %><br />
    <%= f.text_field :author, class:'form-control', value: checkProfile.fullName, :readonly =>true %> <br />
</div>

<div class="form-group">
    <%= f.label :Product %><br />
    <%= f.text_field :prodName, class:'form-control', value:@name, :readonly=> true %> <br />
</div>

<%= f.hidden_field :products_id, class:'form-control', value:@id %> 

<div class="form-group">
    <%= f.label :Rating %><br />
    <%= f.number_field :prodRating, class:'form-control', min: 0, max: 10 %> <br />
</div>

<div class="form-group">
    <%= f.label :Review %><br />
    <%= f.text_area :reviewText, class:'form-control' %> <br />
</div>

<div class="form-group">
    <%= f.label :Date %><br />
    <%= f.date_field :reviewDate, class:'form-control', value: Date.today.strftime,:readonly=> true  %> <br />
</div>

<div class="form-group">
    
    <%= f.hidden_field :profile_id , class:'form-control', value: checkProfile.id %> <br />
</div>



<%= f.submit "Submit", class:'btn-primary' %>


<% end %>

</div>
